<div class="container">
  <h1 style="color: #0D3182; text-align: center"><%= link_to semester_path(@semester), class: "" do %><%= image_tag "arrow-left-circle-fill.svg", class:"mr-1", style: "height:32px"%><% end %>Sprints</h1>
  <div>
      <table class="table table-hover">
      <thead style="background-color: #0D3182; color: white">
        <tr>
          <th>Sprint Name</th>
          <th>Start date</th>
          <th>End date</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @sprints.each do |sprint| %>
          <tr>
            <td><%= sprint.name %></td>
            <td><%= sprint.start_date %></td>
            <td><%= sprint.end_date %></td>
            <td>
              <%= link_to 'Edit', edit_semester_sprint_path(@semester, sprint), class: 'btn btn-outline-secondary btn-sm'  %>
              <%= link_to "Destroy", semester_sprint_path(@semester, sprint), method: :delete, class: 'btn btn-outline-secondary btn-sm'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-3">
    <div style="text-align: center">
      <%= link_to 'Create a new sprint', new_semester_sprint_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>